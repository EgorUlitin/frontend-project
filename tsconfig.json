{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "types": [
      "vite-plugin-svgr/client",
      "node"
    ],
    "downlevelIteration": true,
    "jsx": "react-jsx",
    "strict": true,
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@/*":["./src/*"]
    },
    "isolatedModules": true
  },
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    }
  },
  "include": [
    "./config/jest/jest-setup.ts",
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
}